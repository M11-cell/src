<?xml version="1.0"?>

<robot name="ceres_rover">

    <material name="blue" >
        <color rgba="0 0 0.5 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <material name="grey">
        <color rgba="0.5 0.5 0.5 1"/>
    </material>

    <link name="arm_base_link">
        <visual>
            <geometry>
                <mesh filename="package://robot_description/meshes/arm_parts/arm_base.stl" scale="0.001 0.001 0.001"/> 
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0" />
            <material name="blue"/>
        </visual>
    </link>

    <link name="shoulder_assembly_link">
        <visual>
            <geometry>
                <mesh filename="package://robot_description/meshes/arm_parts/shoulder_assembly.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <origin xyz="0.052 -0.068 0.07" rpy="0 1.57 1.57"/>
            <material name="red"/>
        </visual>
    </link>

    <link name="bicep_tube_link">
        <visual>
            <geometry>
                <mesh filename="package://robot_description/meshes/arm_parts/bicep.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <origin xyz="0.05 -0.27 -0.1" rpy="0 -0.20 1.57"/>
            <material name="grey"/>
        </visual>
    </link>

    <joint name="arm_shoulder_joint" type="continuous">
        <parent link="arm_base_link"/>
        <child link="shoulder_assembly_link"/>
        <origin xyz="0.21 -0.09 0.185" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
    </joint>

    <joint name="bicep_tube_shoulder_assembly_joint" type="fixed">
        <parent link="shoulder_assembly_link"/>
        <child link="bicep_tube_link"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>


</robot>

